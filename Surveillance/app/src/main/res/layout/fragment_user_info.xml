<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/abeezee_italic"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="Kullanıcı Adı:"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/user_info_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background5"
            android:gravity="center"
            android:elevation="10dp"
            android:shadowRadius="20"
            android:paddingLeft="7dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/abeezee_italic"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="Email Adresi:"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/user_info_email_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background5"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/abeezee_italic"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="Kayıtlı Hasta Sayısı:"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:text="9"
            android:id="@+id/registered_patitent_count"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background5"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="21sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">


            <Button
                android:id="@+id/send_email_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Sorun Bıldır"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/abeezee_italic"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Button
                android:id="@+id/password_reset_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginEnd="50dp"
                android:text="Parola Sıfırlama"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/send_email_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/abeezee_italic"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</FrameLayout>